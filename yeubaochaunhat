<script>
const yesBtn = document.getElementById("yesBtn");
const noBtn = document.getElementById("noBtn");
const modal = document.getElementById("modal");
const closeModal = document.getElementById("closeModal");
const cryOverlay = document.getElementById("cryOverlay");
const bgMusic = document.getElementById("bgMusic");
const loveMusic = document.getElementById("loveMusic");

let noClicks = 0;

// Khi báº¥m "CÃ³"
yesBtn.onclick = () => {
  modal.classList.add("show");
  cryOverlay.classList.remove("show");
  
  // Dá»«ng nháº¡c ná»n
  bgMusic.pause();
  
  // PhÃ¡t NgÆ°á»i Ã‚m Phá»§ (42s Ä‘áº§u)
  loveMusic.currentTime = 0;
  loveMusic.play();
  
  setTimeout(() => {
    loveMusic.pause();
    bgMusic.play();
  }, 42000); // 42 giÃ¢y sau phÃ¡t láº¡i nháº¡c ná»n
};

// ÄÃ³ng modal
closeModal.onclick = () => modal.classList.remove("show");

// NÃºt "KhÃ´ng" nÃ© vÃ  Ä‘á»•i ná»™i dung
noBtn.addEventListener("mouseover", () => {
  const x = Math.random() * 300 - 150;
  const y = Math.random() * 200 - 100;
  noBtn.style.transform = `translate(${x}px,${y}px)`;
});

noBtn.addEventListener("click", () => {
  noClicks++;
  cryOverlay.classList.add("show");
  setTimeout(() => cryOverlay.classList.remove("show"), 7000); // 7s overlay
  
  if (noClicks === 1) {
    noBtn.textContent = "NghÄ© ká»¹ láº¡i Ä‘i ğŸ˜¥";
  } else if (noClicks === 2) {
    noBtn.textContent = "ThÃ´i báº¥m CÃ³ Ä‘i mÃ  ğŸ˜…";
  } else {
    noBtn.textContent = "ğŸ˜¢ Anh buá»“n Ä‘Ã³...";
  }
});
</script>
